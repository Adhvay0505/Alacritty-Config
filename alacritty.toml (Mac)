# Alacritty Configuration — Gruvbox on Black (Floating, Padded)

[window]
startup_mode = "Windowed"
decorations = "buttonless"     # thin draggable bar with close button only
opacity = 0.5
blur = true

# Bigger padding for breathing room
padding = { x = 14, y = 12 }
dynamic_padding = false

# ~70–80% of screen on a typical Mac with 16px font
dimensions = { columns = 150, lines = 42 }

[font]
normal = { family = "JetBrains Mono", style = "Regular" }
bold = { family = "JetBrains Mono", style = "Bold" }
italic = { family = "JetBrains Mono", style = "Italic" }
bold_italic = { family = "JetBrains Mono", style = "Bold Italic" }
size = 16.0

# Gruvbox colors on black background
[colors.primary]
background = "0x000000"
foreground = "0xd4be98"

[colors.normal]
black   = "0x000000"
red     = "0xea6962"
green   = "0xa9b665"
yellow  = "0xd8a657"
blue    = "0x7daea3"
magenta = "0xd3869b"
cyan    = "0x89b482"
white   = "0xd4be98"

[colors.bright]
black   = "0x7c6f64"
red     = "0xea6962"
green   = "0xa9b665"
yellow  = "0xd8a657"
blue    = "0x7daea3"
magenta = "0xd3869b"
cyan    = "0x89b482"
white   = "0xdfbf8e"

[cursor.style]
shape = "Block"
blinking = "Off"

[scrolling]
history = 10000
multiplier = 3

